try:
    from lightgbm import LGBMRegressor
    import shap

    print("\nRunning SHAP demo...")

    # Create synthetic feature dataset
    X_demo = pd.DataFrame({
        "heart_rate": np.linspace(100, 180, 200) + np.random.randn(200) * 3,
