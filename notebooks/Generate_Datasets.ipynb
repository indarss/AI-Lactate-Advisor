import os
import numpy as np
import pandas as pd

os.makedirs("data", exist_ok=True)

# =====================================
# 1) Base time-series lactate dataset
#    -> data/athlete_training_dataset.csv
# =====================================
np.random.seed(42)
n = 1000

df_base = pd.DataFrame({
    "time": np.arange(n),
    "power": np.random.normal(220, 45, n).clip(80, 450),
    "hr": np.random.normal(150, 12, n).clip(60, 200),
    "cadence": np.random.normal(85, 4, n).clip(60, 110),
    "temperature": np.random.normal(18, 3, n).clip(-5, 40),
})

# Synthetic lactate signal: depends on power/hr + noise
lactate = (
    0.8
    + 0.012 * (df_base["power"] - 180).clip(0)
    + 0.015 * (df_base["hr"] - 140).clip(0)
    + np.random.normal(0, 0.5, n)
).clip(0.8, 8.0)

df_lac = df_base.copy()
df_lac["lactate"] = lactate
df_lac.to_csv("data/athlete_training_dataset.csv", index=False)
print("✅ Saved data/athlete_training_dataset.csv", df_lac.shape)


# =====================================
# 2) Add biomarkers + recovery_score
#    -> data/athlete_training_with_biomarkers.csv
# =====================================
df_bio = df_lac.copy()

# Synthetic biomarkers
df_bio["CK"] = np.random.normal(200, 60, n).clip(80, 1000)
df_bio["Cortisol"] = np.random.normal(380, 90, n).clip(100, 900)
df_bio["Glucose"] = np.random.normal(90, 10, n).clip(60, 140)
df_bio["hsCRP"] = np.random.normal(1.2, 0.6, n).clip(0.1, 6.0)

# Simple synthetic recovery score: higher stress -> lower score
stress = (
    0.03 * (df_bio["CK"] - 150).clip(0) +
    0.05 * (df_bio["Cortisol"] - 300).clip(0) +
    0.3  * (df_bio["hsCRP"] - 1.0).clip(0)
)
recovery_score = (100 - stress + np.random.normal(0, 5, n)).clip(5, 100)
df_bio["recovery_score"] = recovery_score

df_bio.to_csv("data/athlete_training_with_biomarkers.csv", index=False)
print("✅ Saved data/athlete_training_with_biomarkers.csv", df_bio.shape)


# =====================================
# 3) Merged dataset (for notebook)
#    -> data/merged_training_data.csv
#    For now it's identical to with_biomarkers
# =====================================
df_bio.to_csv("data/merged_training_data.csv", index=False)
print("✅ Saved data/merged_training_data.csv", df_bio.shape)
